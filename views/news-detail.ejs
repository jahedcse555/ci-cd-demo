<%- include("partials/header") %>

<div class="news-card" style="max-width:800px; margin:20px auto;">
  <img src="/uploads/<%= news.image %>" alt="News Image">
  <div class="news-card-body">
    <h2><%= news.title %></h2>
    <p><%= news.body %></p>
    <div class="meta">By <%= news.author %> | <%= news.created_at.toDateString() %></div>
    <a href="/" class="btn-read">Back to Home</a>
    <% if(user && (user.role === "admin" || user.id === news.user_id)){ %>
      <a href="/news/<%= news.id %>/edit" class="btn-read">Edit</a>
      <form action="/news/<%= news.id %>/delete" method="POST" style="display:inline;">
        <button type="submit" class="btn-read">Delete</button>
      </form>
    <% } %>
  </div>
</div>

<%- include("partials/footer") %>
