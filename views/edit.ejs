<h2><%= article ? "Edit News Article" : "Write a News Article" %></h2>
<form method="POST" action="<%= article ? '/edit/' + article.id : '/new' %>">
  <label>Title</label>
  <input type="text" name="title" value="<%= article ? article.title : '' %>" required>

  <label>Content</label>
  <textarea name="content" rows="5" required><%= article ? article.content : '' %></textarea>

  <button type="submit" class="btn"> <%= article ? "Update" : "Publish" %> </button>
</form>
<a href="/" class="back-link">← Back to Home</a>
