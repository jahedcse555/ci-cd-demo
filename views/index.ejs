<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>NewsPortal</title>
<link rel="stylesheet" href="/style.css">
</head>
<body>

<header class="site-header">
  <div class="container header-container">
    <h1 class="site-logo"><a href="/">ðŸ“° Jahed's News Portal</a></h1>
    <nav>
      <a href="/new" class="btn btn-primary">Write News</a>
    </nav>
  </div>
</header>

<main class="container">
  <% if(news.length === 0){ %>
    <p class="empty-msg">No news yet. Be the first to publish!</p>
  <% } else { %>
    <section class="news-grid">
      <% news.forEach(article => { %>
        <div class="news-card">
          <% if(article.image){ %>
            <img src="<%= article.image %>" alt="<%= article.title %>">
          <% } %>
          <h3 class="news-title"><%= article.title %></h3>
          <p class="news-body"><%= article.content %></p>
          <div class="news-meta">
            <span class="author">By <strong><%= article.author %></strong></span>
            <span class="time">ðŸ•’ <%= new Date(article.created_at).toLocaleString() %></span>
          </div>
          <a href="/delete/<%= article.id %>" class="delete-btn" onclick="return confirm('Are you sure?')">Delete</a>
        </div>
      <% }) %>
    </section>
  <% } %>
</main>

<footer class="site-footer">
  <div class="container">
    <p>&copy; 2025 NewsPortal. All rights reserved.</p>
  </div>
</footer>

</body>
</html>
