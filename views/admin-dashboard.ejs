<%- include("partials/header") %>

<style>
  .admin-container {
    max-width: 1200px;
    margin: 30px auto;
    padding: 20px;
  }
  .admin-container h1 {
    text-align: center;
    margin-bottom: 30px;
    font-size: 2rem;
    color: #222;
  }
  .section {
    margin-bottom: 40px;
  }
  .card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    padding: 20px;
    margin-bottom: 20px;
  }
  .card h2 {
    margin-bottom: 20px;
    font-size: 1.5rem;
    border-bottom: 2px solid #eee;
    padding-bottom: 10px;
    color: #333;
  }
  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 10px;
  }
  table th, table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #eee;
  }
  table th {
    background: #f5f5f5;
  }
  .btn {
    display: inline-block;
    padding: 6px 14px;
    font-size: 0.9rem;
    font-weight: 500;
    border-radius: 6px;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: 0.3s;
  }
  .btn-edit {
    background: #007bff;
    color: white;
  }
  .btn-edit:hover { background: #0056b3; }

  .btn-delete {
    background: #dc3545;
    color: white;
  }
  .btn-delete:hover { background: #a71d2a; }

  .btn-promote {
    background: #28a745;
    color: white;
  }
  .btn-promote:hover { background: #1e7e34; }

  .btn-demote {
    background: #ffc107;
    color: #222;
  }
  .btn-demote:hover { background: #d39e00; }
</style>

<div class="admin-container">
  <h1>Admin Dashboard</h1>

  <!-- Users Section -->
  <div class="card section">
    <h2>Manage Users</h2>
    <table>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
      <% users.forEach(u => { %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.username %></td>
          <td><%= u.role %></td>
          <td>
            <% if (u.role === "user") { %>
              <form method="post" action="/admin/users/<%= u.id %>/promote" style="display:inline;">
                <button type="submit" class="btn btn-promote">Promote</button>
              </form>
            <% } else if (u.role === "admin" && u.username !== "admin") { %>
              <form method="post" action="/admin/users/<%= u.id %>/demote" style="display:inline;">
                <button type="submit" class="btn btn-demote">Demote</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>

  <!-- News Section -->
  <div class="card section">
    <h2>Manage News</h2>
    <table>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
      <% news.forEach(n => { %>
        <tr>
          <td><%= n.id %></td>
          <td><%= n.title %></td>
          <td><%= n.author %></td>
          <td>
            <% if (n.deleted) { %>
              <span style="color:red;">Deleted</span>
            <% } else { %>
              <span style="color:green;">Active</span>
            <% } %>
          </td>
          <td>
            <a href="/news/<%= n.id %>/edit" class="btn btn-edit">Edit</a>
            <form method="post" action="/news/<%= n.id %>/delete" style="display:inline;">
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>
</div>

<%- include("partials/footer") %>
